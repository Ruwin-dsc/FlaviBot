      <script>
      /**
        * Count animation for number
        * @param id
        * @param end
        * @param duration
        */
       function animateValue(id, end, duration) {
           let start = end > 400 ? end - 300 : parseInt(end/3);
           let range = end - start;
           let current = start;
           let increment = end > start? 1 : -1;
           let stepTime = Math.abs(Math.floor(duration / range));
           let obj = document.getElementById(id);
           let timer = setInterval(function() {
               current += increment;
               obj.innerHTML = current;
               if (current === end) {
                   clearInterval(timer);
               }
           }, stepTime);
       }
    const serveurs = "<%= statistiques.guilds %>";
    const users = "<%= statistiques.users%>";
    const commands = "<%= statistiques.commands%>"

	setTimeout(() => {
	animateValue("guildsCount", parseInt(serveurs), 1000);
  animateValue("usersCount", parseInt(users), 100);
  animateValue("commandsCount", parseInt(commands), 1000);
	}, 1500);
